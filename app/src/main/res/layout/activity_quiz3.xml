<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".QuizActivity3">

    <TextView
        android:id="@+id/txtScore22"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:textSize="30sp"
        android:text="Score = 0" />

    <TextView
        android:id="@+id/txtQues22"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Q3 - How many orientations does android support??"
        android:textSize="30sp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/radioGroup22">

        <RadioButton
            android:id="@+id/radioButton22"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="4"
            android:layout_weight="1"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/radioButton23"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="8"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/radioButton32"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="2"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </RadioGroup>

    <Button
        android:id="@+id/button22"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Main Menu"
        android:textSize="30sp"
        android:layout_weight="1"/>
</LinearLayout>